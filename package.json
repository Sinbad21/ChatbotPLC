{
  "name": "chatbot-studio",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.9.2",
  "description": "SaaS Multi-Tenant Platform for AI Chatbots",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build && npm -w @chatbot-studio/web run pages:build",
    "build:web": "npm -w @chatbot-studio/web run build && npm -w @chatbot-studio/web run pages:build",
    "deploy:web": "npm -w @chatbot-studio/web run pages:deploy",
    "deploy:api": "cd apps/api-worker && npm install && npm run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:verify-tenant": "tsx scripts/verify-tenant-consistency.ts",
    "db:fix-multi-tenant": "tsx scripts/fix-multi-tenant.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
